{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "types": [
      "chrome"
    ],
    "verbatimModuleSyntax": false,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    },
    "baseUrl": "."
  }
}
